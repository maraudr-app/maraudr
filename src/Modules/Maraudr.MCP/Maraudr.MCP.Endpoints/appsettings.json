{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "McpClient": {
    "Command": "dotnet",
    "Arguments": ["run", "--project", "../Maraudr.MCP.Server"],
    "Name": "Business MCP Server",
    "WorkingDirectory": null
  },
  "JWT": {
    "ValidAudience": "https://localhost:7140",
    "ValidIssuer": "auth-api",
    "TokenValidityInMinutes": 60,
    "RefreshTokenValidityInDays": 7
  },
  "ApiSettings": {
    "StockApiUrl": "http://stock:8081/",
    "PlanningApiUrl" : "http://planning:8085/",
    "AssociationUrl" : "http://association:8080/"
  },
  "AllowedHosts": "*"
}